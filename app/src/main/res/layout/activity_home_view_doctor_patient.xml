<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15151F"
    tools:context=".home_view_doctor_patient">
    <ImageView
        android:id="@+id/patientPhoto"
        android:layout_width="146dp"
        android:layout_height="113dp"
        android:src="@drawable/patient1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"/>
    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="James Bond"
        android:textSize="28dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="127dp"
        android:layout_below="@+id/patientPhoto"/>
    <TextView
        android:id="@+id/patientid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Id: 20MIS0198"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginLeft="139dp"
        android:layout_below="@+id/patientName"/>
    <TextView
        android:id="@+id/doctorAllocated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Allocated: Dr. Asthana"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginLeft="125dp"
        android:layout_below="@+id/patientid"/>
    <RelativeLayout
        android:id="@+id/reminders"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/doctorAllocated"
        android:layout_marginLeft="30dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/reminder_logo"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SetReminders"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/webconfrence"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/reminders"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/progress_detail"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Details"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/communityChats"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/webconfrence"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/person_detail"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Details"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/brainBank"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/communityChats"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/live_location"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Location"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/placesVisited"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/brainBank"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/web_connect"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/connectDoctor"
        android:layout_width="369dp"
        android:layout_height="77dp"
        android:layout_below="@+id/placesVisited"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/feedback"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/red_arrow"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:textColor="#9A8787"
            android:text="______________________________________________________"/>
    </RelativeLayout>





</RelativeLayout>